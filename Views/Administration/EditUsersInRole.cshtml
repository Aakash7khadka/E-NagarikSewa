@model List<smartpalika.Models.RoleUsersVM> 
@{
    ViewData["Title"] = "EditUsersInRole";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var roleid = ViewBag.roleid;
}

<h1>EditUsersInRole</h1>

<form method="post">
    @for (int i = 0; i < Model.Count; i++)
    {
        <input asp-for="@Model[i].UserName" hidden />
        <input asp-for="@Model[i].UserId" hidden/>
        <input asp-for="@Model[i].IsSelected" />
        <label>@Model[i].UserName</label>
        <br />
        <br />
    }
    <input type="submit" value="Update"class="btn btn-primary" />
    <a asp-action="EditRole" asp-route-id="@roleid" class="btn btn-primary">Cancel</a>
</form>

