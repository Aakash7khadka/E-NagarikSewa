@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "ListRole";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container w-75 ml-4">
    <h3 class="mt-4">Roles</h3>
    <a class="btn btn-primary mb-2" asp-controller="Administration" asp-action="CreateRole" style="z-index:999"> Create Role</a>

    <table class="table  table-bordered table-hover">
        <thead>
            <tr>
                <th class="">SN</th>
                <th>ID</th>
                <th>Roles</th>
            </tr>
        </thead>
        <tbody>
            @{var x = 0; }
            @if (Model.Any())
            {
                foreach (var role in Model)
                {
                    <tr>
                        @{x = x + 1; }
                        <td>@x</td>
                        <td>@role.Id</td>
                        <td>@role.Name</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>