<div class="login_container  row align-items-top mt-4 pt-4 mt-md-0 pt-md-0 align-items-md-center">
<div class="container ">
    <div class="login_wrapper_mobile ">
        <div class="row justify-content-center p-0">

            <div class="col-12 p-md-0 col-md-8  d-md-flex justify-content-between align-items-center ">
                <div class="bg_white d-md-flex login_form box_shadow  p-4 rounded rounded-3 ">
                    <div class="d-none d-lg-flex align-items-center p-0 pl-md-2 pr-md-4">
                        <img src="~/images/emb.png" style="width:300px;height:300px;object-fit:contain;position:center" />
                    </div>
                    <div class=" w-100 p-0 pl-md-4 pr-md-2 pb-md-4">
                        <form asp-action="Login">
                            <h4 class="text-center text-md-left pb-2 login_title pt-1">Login Form</h4>
                            <div asp-validation-summary="All" class="text-danger"></div>

                            <div class="form-group">
                                <label asp-for="ID" hidden class="control-label"></label>

                            </div>
                            <div class="form-group">
                                <label asp-for="Email" class="control-label" style=""></label>
                                <input asp-for="Email" class="form-control pr-4" style="" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Password" class="control-label"></label>
                                <input asp-for="Password" class="form-control" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="form-group form-check">
                                <label class="form-check-label">
                                    <input class="form-check-input" asp-for="Rememberme" /> @Html.DisplayNameFor(model => model.Rememberme)
                                </label>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Login" class="btn btn-primary" />
                            </div>
                            <span class="fs-4">Not registered yet?<a asp-controller="Account" asp-action="Register"> Register Now</a></span>
                        </form>
                        <div>
                            <a asp-action="ForgotPassword" class="">Forgot Password?</a>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
    

    </div>

</div>