@model smartpalika.Models.EditUserVM

@{
    ViewData["Title"] = "DeleteUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>DeleteUser</h1>

<h3>Are you sure you want to delete this?</h3>
<div class="bg_white w-50  p-4 box_shadow d-block d-md-flex justify-content-between flex-wrap rounded rounded-3">
    <div class="w-25 mb-4 mb-md-0">
        @if (Model.ProfileImage != null)
        {
            var base64 = Convert.ToBase64String(Model.ProfileImage);
            var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
            <img class="rounded-3" src="@imgSrc" width="200" height="200" style="object-fit:cover" />
        }
        else
        {
            <img class="rounded-3" width="200" height="200" src="https://t3.ftcdn.net/jpg/01/18/01/98/360_F_118019822_6CKXP6rXmVhDOzbXZlLqEM2ya4HhYzSV.jpg" />
        }



        <span asp-validation-for="ProfileImage" class="text-danger"></span>
    </div>

    <div class="mt-4 mt-md-0 ml-0">
        <div class="form-group">
            <label asp-for="FullName" class="control-label"></label>
            <input asp-for="FullName" disabled class="form-control" />
            <span asp-validation-for="FullName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Email" class="control-label"></label>
            <input asp-for="Email" disabled class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>


        <div class="form-group">
            <label asp-for="PhoneNumber" class="control-label"></label>
            <input asp-for="PhoneNumber" disabled class="form-control" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>

        <div class="form-group">
            <form asp-action="DeleteUser">
                <input type="hidden" asp-for="ID" />
                <input type="submit" asp-Route-email="@Model.Email" value="Delete" class="btn btn-danger" />

            </form>
            <br />
            <a class=" ml-2" asp-controller="Account" asp-action="Index" style="z-index:999">&#8592 Back to Profile</a>
        </div>



    </div>
</div>
