@model smartpalika.Models.UserAttendanceVM


@if (@Model.isPresent)
{
    <div class="status_card card m-2 mt-4  border-0 rounded-3 box_shadow" >
        <div class="present_status card-body">
            <div class="head d-flex align-items-center justify-content-start">

                <div class="info ml-1">
                    <h5 class="mb-0 pb-0 text-dark"> @Model.Username</h5>
                    <span><small class="text-muted mt-0 mt-0">IT Officer</small></span>
                    <div class="d-flex justify-content-between">
                        <span>Present</span>
                        <span><i class="present fas fa-toggle-on" style="font-size:1.5rem"></i></span>
                    </div>
                    <div class="mt-2">

                        
                        @if (Model.date != null)
                        {
                            <small class="text-muted">Entry Details</small>
                            <div class="d-flex ">

                                <span class="pr-4" >Date</span>


                                <span class="text-muted pl-4">@Model.date</span>


                            </div>
                            <div class="d-flex " >
                                <span class="pr-4">Time</span>


                                <span class="text-muted pl-3">@Model.time</span>

                            </div>
                        }


                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
<div class="status_card card m-3 mt-4  border-0 rounded-3 box_shadow">
    <div class="absent_status card-body">
        <div class="head d-flex align-items-center justify-content-start">

            <div class="info ml-1">
                <h5 class="mb-0 pb-0 text-dark"> @Model.Username</h5>
                <span><small class="text-muted mt-0 mt-0">IT Officer</small></span>
                <div class="d-flex justify-content-between">
                    <span>Absent</span>
                    <span><i class="absent fas fa-toggle-on" style="font-size:1.5rem"></i></span>
                </div>
                <div class="mt-2">


                    @if (Model.date != null)
                    {
                        <small class="text-muted">Exit Details</small>
                        <div class="d-flex ">

                            <span class="pr-4">Date</span>


                            <span class="text-muted pl-4">@Model.date</span>


                        </div>
                        <div class="d-flex">
                            <span class="pr-4">Time</span>


                            <span class="text-muted pl-4">@Model.time</span>

                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</div>
}


