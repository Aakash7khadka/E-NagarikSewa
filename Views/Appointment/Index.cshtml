@model List<smartpalika.Models.AppointmentVM>

@foreach (var officer in Model)
{
<div class="container">

    @officer.OfficerName;
    @officer.service;
    @{
        var clas = @officer.service;
        ViewBag.clas = clas;
    }
    <div class="row">
        <div class="bg_white shadow mt-4 p-4 col-7">
            <h4>Available Time for @officer.service</h4>
            <div class=" row">
                <div type="button" class="time_slot btn btn-secondary col m-2" data-toggle="@ViewBag.clas" data-target="#exampleModal">10:00 AM</div>
                <div type="button" class="time_slot btn btn-secondary col m-2" data-toggle="@ViewBag.clas" data-target="#exampleModal">11:00 AM</div>
                <div type="button" class="time_slot btn btn-secondary col m-2" data-toggle="@ViewBag.clas" data-target="#exampleModal">12:00 PM</div>
                <div type="button" class="time_slot btn btn-secondary col m-2" data-toggle="@ViewBag.clas" data-target="#exampleModal">1:00 PM</div>
                <div type="button" class="time_slot btn btn-secondary col m-2" data-toggle="@ViewBag.clas" data-target="#exampleModal">2:00 PM</div>
                <div type="button" class="time_slot btn btn-secondary col m-2" data-toggle="@ViewBag.clas" data-target="#exampleModal">3:00 PM</div>
                <div type="button" class="time_slot btn btn-secondary col m-2" data-toggle="@ViewBag.clas" data-target="#exampleModal">4:00 PM</div>
                <div type="button" class="time_slot btn btn-secondary col m-2" data-toggle="@ViewBag.clas" data-target="#exampleModal">1:00 PM</div>

            </div>
            <div class="col-5"></div>
        </div>

    </div>
</div>
 }

    
    <!-- modal -->
    <!-- Button trigger modal -->
    <!-- <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
      Launch demo modal
    </button> -->
    <!-- Modal -->
    <div class="@ViewBag.clas fade " id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title pl-1" id="exampleModalLabel">Book An Appointment</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">

                    <form class="p-2">

                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <div class="col bg-secondary text-light text-center py-2 rounded rounded-2"> <span><i class="fa fa-1x fa-calendar"></i> July 9</span></div>


                            </div>
                            <div class="form-group col-md-6">
                                <div class="col bg-warning text-light text-center py-2 rounded rounded-2"> <span><i class="fa fa-1x fa-clock-o"></i> 12:00 PM</span></div>

                            </div>
                        </div>

                        <div class="form-group">
                            <label for="inputAddress">Email</label>
                            <input type="email" class="form-control" id="inputAddress" placeholder="user@mail.com">
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="inputEmail4">Name</label>
                                <input type="email" class="form-control" id="inputEmail4">
                            </div>
                            <div class="form-group col-md-6">
                                <label for="inputPassword4">Phone</label>
                                <input type="password" class="form-control" id="inputPassword4">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputAddress2">Address</label>
                            <input type="text" class="form-control">

                        </div>
                        <div class="form-group">
                            <label for="inputAddress2">Service</label>
                            <select class="form-group" asp-items="@ViewBag.role_list">
                                <option disabled selected>--Select--category--</option>
                            </select>
                        </div>


                        <button type="submit" class="btn btn-primary">Confirm</button>
                    </form>

                </div>
            </div>
        </div>

    </div>

 